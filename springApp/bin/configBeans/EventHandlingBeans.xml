<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   	<bean id="springWorld" class="com.mind.SpringWorld">
      	<property name="message" value="Hello Spring World!"/>
   	</bean>

   	<bean id="startEventHandler" class="com.mind.EventHandling.StartEventHandler"/>

   	<bean id="stopEventHandler" class="com.mind.EventHandling.StopEventHandler"/>

	<bean id="customEventHandler" class="com.mind.EventHandling.CustomEventHandler"/>

   <bean id="customEventPublisher" class="com.mind.EventHandling.CustomEventPublisher"/>
	
</beans>